<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MusicPlayActivity">

    <TextView
        android:id="@+id/music_title_text_view"
        style="@style/activityTitleStyle"
        android:text="@string/song_name_text" />

    <TextView
        style="@style/descriptionTextViewStyle"
        android:text="@string/music_play_activity_description_text" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:src="@drawable/music_symbol" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/music_backward"
            style="@style/musicPlyerButtonStyle"
            android:src="@drawable/music_backward_button" />

        <ImageView
            android:id="@+id/music_play"
            style="@style/musicPlyerButtonStyle"
            android:src="@drawable/music_play_button" />

        <ImageView
            android:id="@+id/music_stop"
            style="@style/musicPlyerButtonStyle"
            android:src="@drawable/music_stop_button" />

        <ImageView
            android:id="@+id/music_forward"
            style="@style/musicPlyerButtonStyle"
            android:src="@drawable/music_forward_button" />
    </LinearLayout>

    <Button
        android:id="@+id/home_button"
        style="@style/homeButtonStyle"
        android:text="@string/home_button_text" />

</LinearLayout>
